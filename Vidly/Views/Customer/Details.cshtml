@model  Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <b>Membership Type: </b> @Model.MembershipType.MemberShipTypeName
    </li>

    @if(Model.BirthDate.HasValue)
    {
        <li>
            <b>Birth Date: </b> @Model.BirthDate.Value.ToShortDateString()
        </li>
    }
</ul>

